{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types.d.ts"]
}
